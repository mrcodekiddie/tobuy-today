<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_item_name"
            android:textSize="10pt"
            android:maxWidth="170dp"
            android:textColor="@android:color/background_dark"
            android:text="Item Name"
            />

        <TextView
            android:textColor="@android:color/background_dark"
            android:gravity="center_horizontal"
            android:textSize="10pt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Existing Stock"
            android:layout_marginLeft="190dp"
            android:id="@+id/textview_item_existing_quantity"
            />

        <EditText
            android:layout_width="65dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_dark"
            android:justificationMode="inter_word"
            android:layout_marginLeft="50dp"
            android:textAlignment="center"
            android:backgroundTint="@color/accent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_item_existing_quantity"
            android:inputType="numberDecimal"
            android:id="@+id/edittext_item_inword"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/edittext_item_inword"
            android:textColor="@color/primary_text"
            android:id="@+id/tv_inword_total"
            android:textSize="10pt"
           />
    </RelativeLayout>



</LinearLayout>